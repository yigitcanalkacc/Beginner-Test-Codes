package Main;

import java.util.Scanner;

public class Test {

	public static void main(String[] args) {
		
    int a, b;
    double c;
    
    Scanner scanner = new Scanner(System.in);
    
    System.out.println("1.Kenarı Giriniz");
    a = scanner.nextInt();
    
    System.out.println("2.Kenarı Giriniz");
    b = scanner.nextInt();
    
    c = Math.sqrt((a*a) + (b*b));
    
    System.out.println("Hipotenüs " + c);
		
		
        
	}

}
