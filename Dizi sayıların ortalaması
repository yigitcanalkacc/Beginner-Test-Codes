package Main;

import java.util.Arrays;

public class Main {
	
	
	public static void main(String[] args) {

		
	int sum = 0;
	int avg = 0;
	int [] sayilar = { 1, 2, 3, 4, 5};
		
	
	
	for(int i = 0; i <= sayilar.length; i++) {
		sum += i;
		
		
		
	}
	avg = sum / sayilar.length;
	System.out.println("Dizideki sayıların ortalaması = "+avg);
		
	}

}
